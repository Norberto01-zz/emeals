    div(class="form-item")
        label(for="em_phone", class="col-sm-2 control-label") Phone
        input(type="text", ng-model="entityWrapp.phone", class="form-control", placeholder="Phone")#em_details


    div(class="form-item")
        label(for="em_status", class="col-sm-2 control-label") Status
        input(type="checkbox", checked=true, ng-model="entityWrapp.status", class="form-control", placeholder="Status")#em_status

