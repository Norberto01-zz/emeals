        input(type="text", ng-model="entityWrapp.name", class="form-control", placeholder="Title")#em_title

    div(class="form-item")
        label(for="em_details", class="col-sm-2 control-label") Details
        input(type="text", ng-model="entityWrapp.last_name", class="form-control", placeholder="Details")#em_details

    div(class="form-item")
        label(for="em_username", class="col-sm-2 control-label") Username
        input(type="text", ng-model="entityWrapp.username", class="form-control", placeholder="Username")#em_username

    div(class="form-item")
